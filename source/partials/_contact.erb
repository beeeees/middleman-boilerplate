<!-- Modal -->
<div class="modal fade" id="contact_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <a href="javascript:;" class="icon-cancel" data-dismiss="modal"></a>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-8 full-height centered">

            <form id="contact_form" class="vcentered" role="form">

              <div class="form-group-wrapper visible">
                <h4>Contact Flips</h4>
                <div class="form-group">
                  <label for="name">What is Your Name?</label>
                  <input type="text" class="form-control" id="name" placeholder="first &amp; last name" required>
                </div>
                <button class="btn btn-primary rounded next">next (1/4)</button>
              </div><!--/form-group-wrapper-->

              <div class="form-group-wrapper">
                <div class="form-group">
                  <label for="email">What is Your Email?</label>
                  <input type="email" class="form-control" id="email" placeholder="your email please" required>
                </div>
                <button class="btn btn-primary rounded next">next (2/4)</button>
              </div><!--/form-group-wrapper-->

              <div class="form-group-wrapper">
                <div class="form-group checkbox">
                  <label>Check me out </label>
                    <input type="checkbox" required>
                </div>
                <button class="btn btn-primary rounded next">next (3/4)</button>
              </div>

              <div class="form-group-wrapper">
                <div class="form-group">
                  <label for="email">Comments</label>
                  <textarea class="form-control" rows="3" placeholder=""></textarea>
                  <button type="submit" class="btn btn-primary rounded">submit</button>
                </div>
              </div><!--/form-group-wrapper-->

            </form>
          </div>
      </div>
    </div>
  </div>
</div>